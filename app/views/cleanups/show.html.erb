<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1><%= @cleanup.name %></h1>
<h3><%= @cleanup.when %></h3>

<div class="container">
  <div class="row row-centered">
    <div class="col-md-4 col-offset-2 col-centered ">
      <div class="hello">
        <%= image_tag attachment_url(@cleanup, :beach_image, :fill, 400, 275) %>
      </div>
    </div>
      <div class="col-md-4 col-offset-1 col-centered">
        <div class="hello">
          <% if @cleanup.location != nil %>
          <%= @cleanup.location %>
          <%= image_tag ("http://maps.google.com/maps/api/staticmap?size=400x275&sensor=false&zoom=16&markers=#{@cleanup.latitude}%2C#{@cleanup.longitude}") %>
          <% else %>
          <% end %>
        </div>
    </div>
</div>
</div>
<br>
<br>
<br>

<%= @cleanup.description %>
<%= @cleanup.supplies %>
<%= @cleanup.additionalinfo %>

<div style='width: 800px;'>
  <div id="map" style='width: 400px; height: 275px;'></div>
</div>
<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>)
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});</script>

<%= link_to 'Edit', edit_cleanup_path(@cleanup) %>

<%= link_to 'Delete', cleanup_path(@cleanup), method: :delete, data: { confirm: "Are you sure you want to delete?"} %>
