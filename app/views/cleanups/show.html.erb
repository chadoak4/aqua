<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class='indexcleanups-title'>
  <h2 class=title-name><%= @cleanup.name %></h2>
</div>
<div class"show-links-top">
  <%= link_to 'Edit', edit_cleanup_path(@cleanup) %>
  <%= link_to 'Delete', cleanup_path(@cleanup), method: :delete, data: { confirm: "Are you sure you want to delete?"} %>
</div>
<div class="container index-cleanup">
  <div class="row row-centered">
    <div class="col-md-8 col-md-offset-2 col-centered indexcleanups">
      <div class="show-border">
        <%= image_tag attachment_url(@cleanup, :beach_image, :fill,  742, 347 ) %>
      </div>
    </div>
  </div>
</div>
<div class="container index-cleanup">
  <div class="row row-centered">
    <div class="col-md-8 col-md-offset-2 col-centered indexcleanups">
    <div class="show-headers">
      Location:
    </div>
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
          <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
              <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                <%= @cleanup.location %>
              </a>
            </h4>
          </div>
          <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body map">
              <div style='width: 800px;'>
                <div id="map" style='width: 600px; height: 275px;'></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="show-headers">
        Cleanup Date/Time:
      </div>
      <div class="show-links-bottom">
      <%= @cleanup.when%>
      </div>
      <div class="show-headers">
        Description:
      </div>
    <div class="show-links-bottom">
      <%= @cleanup.description%>
    </div>
      <div class="show-headers">
        Supplies Needed:
      </div><div class="show-links-bottom">
        <%= @cleanup.additionalinfo %>
      </div>
      <div class="show-links-bottom">
        <%= @cleanup.supplies %>
      </div>
      <div class="show-headers">
        Important Additional Information:
      </div>
      <div class="show-links-bottom">
        <%= @cleanup.additionalinfo %>
      </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});</script>
