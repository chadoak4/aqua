<!DOCTYPE html>
<html>
<head>
  <title>Aqua Zest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default-pages navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <class="navbar-brand-pages">
          <%= image_tag('aqualogo.png', height: '70', width: '130') %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li>
            <%= link_to "Home", cleanups_path %>
          </li>
          <li>
            <%= link_to "Blog", blogs_path %>
          </li>
          <li>
            <%= link_to "Cleanups", cleanups_path %>
          </li>
          <li>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
          </li>
          <% else %>
          <li>
            <%= link_to "Log In", new_user_session_path %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

<%= yield %>

</body>
</html>
